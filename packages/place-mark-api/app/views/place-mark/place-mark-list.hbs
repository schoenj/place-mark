<section class="section">
    <h1 class="title">
        Place-Marks
        <a class="button is-primary is-small" href="/place-mark/new">
            New
        </a>
    </h1>
    <form action="{{tableForm.action}}" method="{{tableForm.method}}">
        <div class="table-form">
            {{> components/form-field formField=tableForm.fields.perPage }}
            {{> components/page-input page=result.page totalPages=result.totalPages }}
            {{> components/submit-button designation="Apply" }}
        </div>
        <table class="table is-striped is-fullwidth">
            <thead>
                <tr>
                    <th>Designation</th>
                    <th>Coordinates</th>
                    <th>Description</th>
                    <th>Created By</th>
                    <th>CreatedAt/UpdatedAt</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#if result.data.length}}
                    {{#each result.data}}
                        <tr>
                            <td>{{ designation }}</td>
                            <td>
                                Latitude: {{ latitude }}<br>
                                Longitude: {{ longitude }}
                            </td>
                            <td>{{ description }}</td>
                            <td>{{ createdBy.designation }}</td>
                            <td>{{dateFormat createdAt}}<br>{{dateFormat updatedAt}}</td>
                            <td>
                                <a href="/place-mark/{{id}}/">
                                    <i class="fas fa-eye"></i>
                                </a>
                                {{#if (or admin (isEqual createdByid user?.id)) }}
                                    <a href="/place-mark/{{id}}/edit">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                {{/if}}
                                {{#if (or admin (isEqual createdByid user?.id)) }}
                                    <a href="/place-mark/{{id}}/delete">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                {{/if}}
                            </td>
                        </tr>
                    {{/each}}
                {{else}}
                    <tr>
                        <td colspan="5" class="has-text-centered">No entries found</td>
                    </tr>
                {{/if}}
            </tbody>
        </table>
    </form>
</section>