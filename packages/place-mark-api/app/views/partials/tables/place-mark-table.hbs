<table class="table is-striped is-fullwidth">
    <thead>
    <tr>
        <th>Designation</th>
        <th>Coordinates</th>
        {{#if (not lookupOnly) }}
            <th>Description</th>
            <th>Created By</th>
            <th>CreatedAt/UpdatedAt</th>
        {{/if}}
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {{#if data.length}}
        {{#each data}}
            <tr>
                <td>{{ designation }}</td>
                <td>
                    Latitude: {{ latitude }}<br>
                    Longitude: {{ longitude }}
                </td>
                {{#if (not ../lookupOnly) }}
                    <td>{{ description }}</td>
                    <td>{{ createdBy.designation }}</td>
                    <td>{{ dateFormat createdAt }}<br>{{ dateFormat updatedAt }}</td>
                {{/if}}
                <td>
                    <a href="/place-mark/{{id}}">
                        <i class="fas fa-eye"></i>
                    </a>
                    {{#if (not ../lookupOnly)}}
                        {{#if (or ../admin (isEqual createdByid ../userid)) }}
                            <a href="/place-mark/{{id}}/edit">
                                <i class="fas fa-pen"></i>
                            </a>
                            <a href="/place-mark/{{id}}/delete">
                                <i class="fas fa-trash"></i>
                            </a>
                        {{/if}}
                    {{/if}}
                </td>
            </tr>
        {{/each}}
    {{else}}
        <tr>
            <td colspan="{{#if lookupOnly}}3{{else}}6{{/if}}" class="has-text-centered">No entries found</td>
        </tr>
    {{/if}}
    </tbody>
</table>