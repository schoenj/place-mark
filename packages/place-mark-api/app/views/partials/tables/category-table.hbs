<table class="table is-striped is-fullwidth">
    <thead>
    <tr>
        <th>Designation</th>
        {{#if (not lookupOnly) }}
            <th>Created By</th>
            <th>Created At/UpdatedAt</th>
        {{/if}}
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {{#if data.length}}
        {{#each data}}
            <tr>
                <td>{{ designation }}</td>
                {{#if (not ../lookupOnly) }}
                    <td>
                        <a href="/user/{{id}}">
                            {{ createdBy.designation }}
                        </a>
                    </td>
                    <td>{{ dateFormat createdAt }}<br>{{ dateFormat updatedAt }}</td>
                {{/if}}
                <td>
                    <a href="/category/{{id}}">
                        <i class="fas fa-eye"></i>
                    </a>
                    {{#if (not ../lookupOnly)}}
                        {{#if (or ../admin (isEqual createdBy.id ../userId)) }}
                            <a href="/category/{{id}}/edit">
                                <i class="fas fa-pen"></i>
                            </a>
                            <a href="/category/{{id}}/delete">
                                <i class="fas fa-trash"></i>
                            </a>
                        {{/if}}
                    {{/if}}
                </td>
            </tr>
        {{/each}}
    {{else}}
        <tr>
            <td colspan="{{#if lookupOnly}}2{{else}}4{{/if}}" class="has-text-centered">No entries found</td>
        </tr>
    {{/if}}
    </tbody>
</table>