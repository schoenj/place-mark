<section class="section">
    <h1 class="title">Sign up</h1>
    <form action="/account/sign-up" method="POST">
        <div class="columns">
            <div class="column">
                <div class="field">
                    <label class="label" for="firstName">First name</label>
                    <div class="control">
                        <input class="input" type="text" placeholder="Enter first name" name="firstName">
                    </div>
                </div>
            </div>
            <div class="column">
                <div class="field">
                    <label class="label" for="lastName">Last name</label>
                    <div class="control">
                        <input class="input" type="text" placeholder="Enter last name" name="lastName">
                    </div>
                </div>
            </div>
        </div>
        <div class="columns">
            <div class="column">
                <div class="field">
                    <label class="label" for="email">Email</label>
                    <div class="control">
                        <input class="input" type="text" placeholder="Enter email" name="email">
                    </div>
                </div>
            </div>
        </div>
        <div class="columns">
            <div class="column">
                <div class="field">
                    <label class="label" for="password">Password</label>
                    <div class="control">
                        <input class="input" type="password" placeholder="Enter password" name="password">
                    </div>
                </div>
            </div>
        </div>
        <div class="columns">
            <div class="column">
                <div class="field">
                    <label class="label" for="passwordAgain">Password again</label>
                    <div class="control">
                        <input class="input" type="password" placeholder="Enter password" name="passwordAgain">
                    </div>
                </div>
            </div>
        </div>
        <div class="columns">
            <div class="column">
                <div class="field">
                    <div class="control">
                        <button class="button is-link">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>