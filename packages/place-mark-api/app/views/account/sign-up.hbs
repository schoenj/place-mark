<section class="section">
    <h1 class="title">Sign up</h1>
    <form action="{{registerForm.action}}" method="{{registerForm.method}}">
        <div class="columns">
            <div class="column">
                {{> components/form-field formField=registerForm.fields.firstName }}
            </div>
            <div class="column">
                {{> components/form-field formField=registerForm.fields.lastName }}
            </div>
        </div>
        <div class="columns">
            <div class="column">
                {{> components/form-field formField=registerForm.fields.email }}
            </div>
        </div>
        <div class="columns">
            <div class="column">
                {{> components/form-field formField=registerForm.fields.password }}
            </div>
        </div>
        <div class="columns">
            <div class="column">
                {{> components/form-field formField=registerForm.fields.passwordAgain }}
            </div>
        </div>
        <div class="columns">
            <div class="column">
                {{> components/submit-button designation="Sign up" }}
            </div>
        </div>
    </form>
</section>