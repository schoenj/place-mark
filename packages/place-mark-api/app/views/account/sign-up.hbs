<section class="section">
    <h1 class="title">Sign up</h1>
    <form action="/account/sign-up" method="POST">
        <div class="columns">
            <div class="column">
                {{> components/input-field fieldName="firstName" placeholder="Enter first name" description="First name" }}
            </div>
            <div class="column">
                {{> components/input-field fieldName="lastName" placeholder="Enter last name" description="Last name" }}
            </div>
        </div>
        <div class="columns">
            <div class="column">
                {{> components/input-field fieldName="email" placeholder="Enter email name" description="Email" }}
            </div>
        </div>
        <div class="columns">
            <div class="column">
                {{> components/input-field fieldName="password" placeholder="Enter password" description="Password" inputType="password" }}
            </div>
        </div>
        <div class="columns">
            <div class="column">
                {{> components/input-field fieldName="passwordAgain" placeholder="Enter password again" description="Password again" inputType="password" }}
            </div>
        </div>
        <div class="columns">
            <div class="column">
                <div class="field">
                    <div class="control">
                        <button class="button is-link">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>