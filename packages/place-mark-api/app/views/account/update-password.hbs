<section class="section">
    <h1 class="title">Change Password</h1>
    <form action="{{form.action}}" method="{{form.method}}">
        <div class="columns">
            <div class="column">
                {{> components/form-field formField=form.fields.oldPassword }}
            </div>
        </div>
        <div class="columns">
            <div class="column">
                {{> components/form-field formField=form.fields.password }}
            </div>
        </div>
        <div class="columns">
            <div class="column">
                {{> components/form-field formField=form.fields.passwordAgain }}
            </div>
        </div>
        <div class="columns">
            <div class="column">
                {{> components/submit-button designation="Save" }}
            </div>
        </div>
    </form>
</section>