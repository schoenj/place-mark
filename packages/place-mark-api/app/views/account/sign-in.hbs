<section class="section">
    <h1 class="title">Sign in</h1>
    <form action="{{loginForm.action}}" method="{{loginForm.method}}">
        <div class="columns">
            <div class="column">
                {{> components/form-field formField=loginForm.fields.email }}
            </div>
        </div>
        <div class="columns">
            <div class="column">
                {{> components/form-field formField=loginForm.fields.password }}
            </div>
        </div>
        <div class="columns">
            <div class="column">
                <div class="field">
                    <div class="control">
                        <button class="button is-link">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>