<section class="section">
    <h1 class="title">
        Categories
        {{#if admin}}
            <a class="button is-primary is-small" href="/category/new">
                New
            </a>
        {{/if}}
    </h1>
    <form action="{{tableForm.action}}" method="{{tableForm.method}}">
        <div class="table-form">
            {{> components/form-field formField=tableForm.fields.perPage }}
            {{> components/page-input page=result.page totalPages=result.totalPages }}
            {{> components/submit-button designation="Apply" }}
        </div>
        <table class="table is-striped is-fullwidth">
            <thead>
            <tr>
                <th>Designation</th>
                <th>Created By</th>
                <th>Created At/UpdatedAt</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {{#if result.data.length}}
                {{#each result.data}}
                    <tr>
                        <td>{{ designation }}</td>
                        <td>
                            <a href="/user/{{id}}">
                                {{ createdBy.designation }}
                            </a>
                        </td>
                        <td>{{ dateFormat createdAt }}<br>{{ dateFormat updatedAt }}</td>
                        <td>
                            <a href="/category/{{id}}">
                                <i class="fas fa-eye"></i>
                            </a>
                            {{#if ../admin}}
                                <a href="/category/{{id}}/edit">
                                    <i class="fas fa-pen"></i>
                                </a>
                                <a href="/category/{{id}}/delete">
                                    <i class="fas fa-trash"></i>
                                </a>
                            {{/if}}
                        </td>
                    </tr>
                {{/each}}
            {{else}}
                <tr>
                    <td colspan="4" class="has-text-centered">No entries found</td>
                </tr>
            {{/if}}
            </tbody>
        </table>
    </form>
</section>