<section class="section">
    <h1 class="title">Categories</h1>
    <form action="{{tableForm.action}}" method="{{tableForm.method}}">
        {{> components/form-field formField=tableForm.fields.perPage }}
        {{> components/page-input page=result.page totalPages=result.totalPages }}
        <div class="field">
            <div class="control">
                <button class="button is-link">Submit</button>
            </div>
        </div>
        <table class="table is-striped is-fullwidth">
            <thead>
            <tr>
                <th>Designation</th>
                <th>Created By</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {{#if result.data.length}}
                {{#each result.data}}
                    <tr>
                        <td>{{ designation }}</td>
                        <td>{{ createdBy.designation }}</td>
                        <td>{{ createdAt }}</td>
                        <td>
                            <a href="/category/{{id}}/edit">
                                <i class="fas fa-pen"></i>
                            </a>
                            <a href="/category/{{id}}/delete">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {{/each}}
            {{else}}
                <tr>
                    <td colspan="4" class="has-text-centered">No entries found</td>
                </tr>
            {{/if}}
            </tbody>
        </table>
    </form>
</section>