<section class="section">
    <h1 class="title">
        {{title}}
        {{#if admin}}
            <a class="button is-primary is-small" href="/category/{{details.id}}/edit">
                Edit
            </a>
        {{/if}}
    </h1>

    <h2 class="subtitle">
        Information
    </h2>
    <table class="table is-vertical">
        <tr>
            <th>Id</th>
            <td>{{details.id}}</td>
        </tr>
        <tr>
            <th>Designation</th>
            <td>{{details.designation}}</td>
        </tr>
        <tr>
            <th>Created By</th>
            <td>
                <a href="/user/{{details.createdBy.id}}">
                    {{details.createdBy.designation}}
                </a>
            </td>
        </tr>
        <tr>
            <th>Created At</th>
            <td>{{{dateFormat details.createdAt}}}</td>
        </tr>
        <tr>
            <th>Updated At</th>
            <td>{{{dateFormat details.updatedAt}}}</td>
        </tr>
    </table>

    <h2 class="subtitle">
        Place-Marks
    </h2>
    {{> tables/place-mark-table data=details.placeMarks admin=admin userId=user?.id lookupOnly=true }}
</section>